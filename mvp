    <h1>SkillConnect - MVP Web</h1>
    <nav>
        <button onclick="mostrarSecao('home')">Início</button>
        <button onclick="mostrarSecao('novo')">Novo Perfil</button>
        <button onclick="mostrarSecao('perfis')">Perfis</button>
        <button onclick="mostrarSecao('mentoria')">Mentoria</button>
    </nav>
