                <option value="avancado">Avançado</option>
            </select>

            <label for="competencias">Competências (separadas por vírgula):</label>
            <textarea id="competencias" name="competencias" rows="3" placeholder="Ex: python, django, sql"></textarea>

            <label for="interesses">Interesses (separados por vírgula):</label>
            <textarea id="interesses" name="interesses" rows="3" placeholder="Ex: data science, backend, segurança"></textarea>

            <div class="checkbox-row">
                <input id="mentor" name="mentor" type="checkbox">
                <label for="mentor">Disponível para atuar como mentor(a)</label>
            </div>

            <button type="submit">Salvar perfil</button>
        </form>
    </section>

    <!-- Seção Perfis -->
    <section id="perfis" class="section">
