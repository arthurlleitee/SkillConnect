<footer>
    SkillConnect MVP – aplicação web demonstrativa (HTML, CSS e JavaScript).
</footer>

<script>
    // Estrutura de dados em memória
    const perfis = [];

    function normalizarLista(texto) {
        if (!texto) return [];
        return texto
            .split(",")
            .map(t => t.trim().toLowerCase())
            .filter(t => t.length > 0);
    }

    function atualizarDashboard() {
        const total = perfis.length;
        const totalMentores = perfis.filter(p => p.mentor).length;
        const totalIniciantes = perfis.filter(p => p.nivel === "iniciante").length;
        const totalAvancados = perfis.filter(p => p.nivel === "avancado").length;

        document.getElementById("total-perfis").textContent = total;
        document.getElementById("total-mentores").textContent = totalMentores;
        document.getElementById("total-iniciantes").textContent = totalIniciantes;
        document.getElementById("total-avancados").textContent = totalAvancados;
    }

    function renderizarPerfis() {
        const corpoTabela = document.getElementById("tabela-perfis-body");
        const vazio = document.getElementById("tabela-perfis-vazia");
        const containerTabela = document.getElementById("tabela-perfis-container");

        corpoTabela.innerHTML = "";

        if (perfis.length === 0) {
            vazio.style.display = "block";
            containerTabela.style.display = "none";
            return;
        }

        vazio.style.display = "none";
        containerTabela.style.display = "block";

        perfis.forEach(p => {
            const tr = document.createElement("tr");

            const tdNome = document.createElement("td");
            tdNome.textContent = p.nome;

            const tdEmail = document.createElement("td");
            tdEmail.textContent = p.email;

            const tdNivel = document.createElement("td");
            tdNivel.textContent = p.nivel;

            const tdComp = document.createElement("td");
            tdComp.innerHTML = "";
            p.competencias.forEach(c => {
                const span = document.createElement("span");
                span.className = "badge";
                span.textContent = c;
                tdComp.appendChild(span);
            });

            const tdInts = document.createElement("td");
            tdInts.innerHTML = "";
            p.interesses.forEach(i => {
                const span = document.createElement("span");
                span.className = "badge";
                span.textContent = i;
                tdInts.appendChild(span);
            });

            const tdMentor = document.createElement("td");
            tdMentor.textContent = p.mentor ? "Sim" : "Não";

            tr.appendChild(tdNome);
            tr.appendChild(tdEmail);
            tr.appendChild(tdNivel);
            tr.appendChild(tdComp);
            tr.appendChild(tdInts);
            tr.appendChild(tdMentor);

            corpoTabela.appendChild(tr);
        });
    }

    function renderizarMentorias() {
        const lista = document.getElementById("lista-mentorias");
        const vazio = document.getElementById("mentoria-vazia");
        lista.innerHTML = "";

        const mentores = perfis.filter(p => p.mentor);
        const mentees = perfis.filter(p => !p.mentor && p.nivel === "iniciante");

        const matches = [];

        mentees.forEach(mentee => {
            mentores.forEach(mentor => {
                const interseccao = mentor.competencias.filter(c =>
                    mentee.interesses.includes(c)
                );
                if (interseccao.length > 0) {
                    matches.push({
                        mentor,
                        mentee,
                        tecnologias: interseccao
                    });
                }
            });
        });

        if (matches.length === 0) {
            vazio.style.display = "block";
            return;
        } else {
            vazio.style.display = "none";
        }

        matches.forEach(m => {
            const li = document.createElement("li");
            li.innerHTML = `
                <strong>Mentor(a):</strong> ${m.mentor.nome} (${m.mentor.email})<br>
                <strong>Mentee:</strong> ${m.mentee.nome} (${m.mentee.email})<br>
                <strong>Tecnologias em comum:</strong> ${m.tecnologias.join(", ")}
            `;
            lista.appendChild(li);
        });
    }

    function salvarPerfil(event) {
        event.preventDefault();

        const nome = document.getElementById("nome").value.trim();
        const email = document.getElementById("email").value.trim();
        const nivel = document.getElementById("nivel").value;
        const competencias = normalizarLista(
            document.getElementById("competencias").value
        );
        const interesses = normalizarLista(
            document.getElementById("interesses").value
        );
        const mentor = document.getElementById("mentor").checked;

        if (!nome || !email) {
            alert("Preencha pelo menos nome e email.");
            return;
        }

        perfis.push({ nome, email, nivel, competencias, interesses, mentor });

        // Limpa o formulário
        document.getElementById("nome").value = "";
        document.getElementById("email").value = "";
        document.getElementById("nivel").value = "iniciante";
        document.getElementById("competencias").value = "";
        document.getElementById("interesses").value = "";
        document.getElementById("mentor").checked = false;

        atualizarDashboard();
        renderizarPerfis();
        renderizarMentorias();

        mostrarSecao("perfis");
    }

    function mostrarSecao(id) {
        document.querySelectorAll(".section").forEach(sec => {
            sec.classList.remove("active");
        });
        document.getElementById(id).classList.add("active");
    }

    // Inicializa com alguns perfis de exemplo para a demonstração
    function seedExemplo() {
        perfis.push(
            {
                nome: "Ana Silva",
                email: "ana.silva@unicap.br",
                nivel: "avancado",
                competencias: ["python", "django", "sql", "data science"],
                interesses: ["mentorar", "boas práticas"],
                mentor: true
            },
            {
                nome: "Bruno Souza",
                email: "bruno.souza@unicap.br",
                nivel: "intermediario",
                competencias: ["java", "git", "sql"],
                interesses: ["spring", "arquitetura"],
                mentor: true
            },
            {
                nome: "Carla Lima",
                email: "carla.lima@unicap.br",
                nivel: "iniciante",
                competencias: [],
                interesses: ["python", "django", "git"],
                mentor: false
            },
            {
                nome: "Diego Costa",
                email: "diego.costa@unicap.br",
                nivel: "iniciante",
                competencias: ["html", "css"],
                interesses: ["javascript", "react", "git"],
                mentor: false
            }
        );

        atualizarDashboard();
        renderizarPerfis();
        renderizarMentorias();
    }

    seedExemplo();
</script>
</body>
</html>
